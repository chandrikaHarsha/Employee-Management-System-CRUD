<h1>Add Employees</h1>
<form method="post" action="/add-employee" id="AddEmployee">
  <fieldset>
    <legend>Basic Information</legend>
    <div class="row">
      <label for="emp_name">Employee Name</label>
      <input type="text" id="emp_name" name="emp_name" required />
    </div>
    <div class="row">
      <label for="contact_number">Contact Number</label>
      <input type="text" id="contact_number" name="contact_number" required />
    </div>
    <div class="row">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
    </div>
    <div class="row">
      <label for="dob">DOB</label>
      <input type="date" id="dob" name="dob" required />
    </div>
  </fieldset>
  <fieldset>
    <legend>Employment Details</legend>
    <div class="row">
      <label for="profile">Profile</label>
      <input type="text" id="profile" name="profile" required />
    </div>
    <div class="row">
      <label for="experience">Experience</label>
      <input type="text" id="experience" name="experience" required />
    </div>
    <div class="row">
      <label for="last_salary">Salary</label>
      <input
        type="text"
        name="last_salary"
        id="last_salary"
        placeholder="Last Salary From Previous Employment"
        required
      />
    </div>
    <div class="row">
      <label for="salary">salary</label>
      <input
        type="text"
        id="salary"
        name="current_salary"
        placeholder="Current CTC"
        required
      />
    </div>
  </fieldset>
  <div class="submit">
    <button type="submit">Submit</button>
  </div>
</form>
